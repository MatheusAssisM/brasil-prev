# Application Settings
# Override these via environment variables prefixed with MONOPOLY_

# Application name
MONOPOLY_APP_NAME=Brasil Prev - Monopoly Simulator API

# Debug mode (true/false)
MONOPOLY_DEBUG=false

# API server configuration
MONOPOLY_API_HOST=0.0.0.0
MONOPOLY_API_PORT=8000

# API documentation URL path
MONOPOLY_DOC_URL=/

# Logging level (DEBUG, INFO, WARNING, ERROR, CRITICAL)
MONOPOLY_LOG_LEVEL=WARNING
