# Application Settings
# Override these via environment variables prefixed with MONOPOLY_

# Application name
MONOPOLY_APP_NAME=Brasil Prev - Monopoly Simulator API

# Debug mode (true/false)
MONOPOLY_DEBUG=true

# API server configuration
MONOPOLY_API_HOST=0.0.0.0
MONOPOLY_API_PORT=8000

# API documentation URL path
MONOPOLY_DOC_URL=/

# Logging level (DEBUG, INFO, WARNING, ERROR, CRITICAL)
MONOPOLY_LOG_LEVEL=WARNING

# Parallelization settings
# Enable parallel execution for batch simulations (true/false)
MONOPOLY_ENABLE_PARALLEL=true

# Maximum number of worker processes (default: 4)
# Set to 0 to use all available CPU cores
MONOPOLY_MAX_WORKERS=4
